    <script>
        // Configura√ß√µes do WhatsApp
        let whatsappConfig = {
            groupLink: "",
            birthdayMessage: `üéâ Parab√©ns, {nome}! üéÇ\n\nQue este seja um dia especial e que todos os seus sonhos se realizem!\n\nCom carinho,\nEquipe Network In Foco`,
            defaultMessage: `Ol√° {nome}! \n\nEstou entrando em contato atrav√©s do sistema Network In Foco.\n\nAtenciosamente`,
            autoBirthdayNotifications: false
        };

        // Dados de exemplo (substitua pelos dados reais do seu sistema)
        let members = [
            { id: 1, name: "Jo√£o Silva", role: "Desenvolvedor", phone: "5511999999999", birthday: new Date().toISOString().split('T')[0] },
            { id: 2, name: "Maria Santos", role: "Designer", phone: "5511988888888", birthday: "1990-05-15" },
            { id: 3, name: "Pedro Oliveira", role: "Gerente", phone: "5511977777777", birthday: "1985-12-20" }
        ];

        // Carregar configura√ß√µes salvas
        function loadWhatsAppConfig() {
            const savedConfig = localStorage.getItem('networkWhatsAppConfig');
            if (savedConfig) {
                whatsappConfig = { ...whatsappConfig, ...JSON.parse(savedConfig) };
                
                // Atualizar UI
                document.getElementById('whatsappGroupLink').value = whatsappConfig.groupLink || "";
                document.getElementById('birthdayMessage').value = whatsappConfig.birthdayMessage;
                document.getElementById('defaultMessage').value = whatsappConfig.defaultMessage;
                document.getElementById('autoBirthdayNotifications').checked = whatsappConfig.autoBirthdayNotifications;
            }
        }

        // Salvar configura√ß√µes
        function saveWhatsAppConfig() {
            whatsappConfig.groupLink = document.getElementById('whatsappGroupLink').value;
            whatsappConfig.birthdayMessage = document.getElementById('birthdayMessage').value;
            whatsappConfig.defaultMessage = document.getElementById('defaultMessage').value;
            whatsappConfig.autoBirthdayNotifications = document.getElementById('autoBirthdayNotifications').checked;
            
            localStorage.setItem('networkWhatsAppConfig', JSON.stringify(whatsappConfig));
            showNotification('Configura√ß√µes salvas com sucesso!');
            
            // Se ativou notifica√ß√µes autom√°ticas, agenda a verifica√ß√£o
            if (whatsappConfig.autoBirthdayNotifications) {
                scheduleBirthdayCheck();
            }
        }

        // Mostrar notifica√ß√£o
        function showNotification(message, type = 'success') {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.style.backgroundColor = type === 'error' ? 'var(--accent-color)' : 'var(--success-color)';
            notification.style.display = 'block';
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, 3000);
        }

        // Gerar link do WhatsApp
        function generateWhatsAppLink(phone, message) {
            // Formata o n√∫mero (remove caracteres n√£o num√©ricos e adiciona o c√≥digo do pa√≠s se necess√°rio)
            const formattedPhone = phone.replace(/\D/g, '');
            const encodedMessage = encodeURIComponent(message);
            return `https://wa.me/${formattedPhone}?text=${encodedMessage}`;
        }

        // Abrir link do WhatsApp
        function openWhatsApp(phone, message) {
            const link = generateWhatsAppLink(phone, message);
            window.open(link, '_blank');
        }

        // Verificar anivers√°rios do dia
        function getTodaysBirthdays() {
            const today = new Date();
            const todayMonth = today.getMonth();
            const todayDate = today.getDate();
            
            return members.filter(member => {
                if (!member.birthday) return false;
                
                const birthday = new Date(member.birthday);
                return birthday.getMonth() === todayMonth && birthday.getDate() === todayDate;
            });
        }

        // Renderizar aniversariantes
        function renderBirthdays() {
            const container = document.getElementById('birthdayList');
            const todaysBirthdays = getTodaysBirthdays();
            
            if (todaysBirthdays.length === 0) {
                container.innerHTML = '<p>Nenhum aniversariante hoje.</p>';
                return;
            }
            
            container.innerHTML = todaysBirthdays.map(member => `
                <div class="birthday-item">
                    <div class="birthday-avatar">
                        <img src="https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="${member.name}">
                    </div>
                    <div class="birthday-info">
                        <div class="birthday-name">${member.name}</div>
                        <div class="birthday-role">${member.role}</div>
                    </div>
                    <div class="birthday-actions">
                        <button class="btn btn-whatsapp" onclick="sendBirthdayWish('${member.id}')">
                            <span>üéÇ</span> Parab√©ns
                        </button>
                    </div>
                </div>
            `).join('');
        }

        // Enviar mensagem de parab√©ns
        function sendBirthdayWish(memberId) {
            const member = members.find(m => m.id == memberId);
            if (!member || !member.phone) {
                showNotification('Membro n√£o encontrado ou sem telefone cadastrado', 'error');
                return;
            }
            
            const message = whatsappConfig.birthdayMessage.replace(/{nome}/g, member.name);
            openWhatsApp(member.phone, message);
        }

        // Enviar parab√©ns para todos os aniversariantes
        function sendAllBirthdayWishes() {
            const todaysBirthdays = getTodaysBirthdays();
            
            if (todaysBirthdays.length === 0) {
                showNotification('Nenhum aniversariante hoje', 'info');
                return;
            }
            
            // Para m√∫ltiplos contatos, precisamos abrir individualmente
            // Em um sistema real, voc√™ poderia usar a API Business do WhatsApp
            todaysBirthdays.forEach((member, index) => {
                setTimeout(() => {
                    sendBirthdayWish(member.id);
                }, index * 1000); // Delay de 1 segundo entre cada abertura
            });
            
            showNotification(`Abrindo WhatsApp para ${todaysBirthdays.length} aniversariante(s)`);
        }

        // Abrir modal do WhatsApp
        function openWhatsAppModal() {
            const modal = document.getElementById('whatsappModal');
            const contactsContainer = document.getElementById('whatsappContacts');
            
            // Renderizar contatos
            contactsContainer.innerHTML = members.map(member => `
                <div class="whatsapp-contact" onclick="selectContact('${member.id}')">
                    <div class="whatsapp-contact-avatar">
                        <img src="https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="${member.name}">
                    </div>
                    <div class="whatsapp-contact-info">
                        <div class="whatsapp-contact-name">${member.name}</div>
                        <div class="whatsapp-contact-role">${member.role}</div>
                    </div>
                    <div class="whatsapp-contact-action">üí¨</div>
                </div>
            `).join('');
            
            modal.style.display = 'flex';
        }

        // Fechar modal do WhatsApp
        function closeWhatsAppModal() {
            document.getElementById('whatsappModal').style.display = 'none';
        }

        // Selecionar contato
        let selectedContactId = null;

        function selectContact(memberId) {
            selectedContactId = memberId;
            
            // Destacar contato selecionado
            document.querySelectorAll('.whatsapp-contact').forEach(contact => {
                contact.style.borderColor = '#e2e8f0';
                contact.style.backgroundColor = 'transparent';
            });
            
            event.currentTarget.style.borderColor = 'var(--whatsapp-green)';
            event.currentTarget.style.backgroundColor = 'var(--whatsapp-light)';
        }

        // Enviar mensagem personalizada
        function sendCustomMessage() {
            if (!selectedContactId) {
                showNotification('Selecione um contato primeiro', 'error');
                return;
            }
            
            const member = members.find(m => m.id == selectedContactId);
            if (!member || !member.phone) {
                showNotification('Contato n√£o encontrado ou sem telefone', 'error');
                return;
            }
            
            let message = document.getElementById('customMessage').value;
            if (!message.trim()) {
                // Usar mensagem padr√£o se n√£o houver mensagem personalizada
                message = whatsappConfig.defaultMessage.replace(/{nome}/g, member.name);
            }
            
            openWhatsApp(member.phone, message);
            closeWhatsAppModal();
        }

        // Abrir grupo do WhatsApp
        function openGroupChat() {
            if (!whatsappConfig.groupLink) {
                showNotification('Configure o link do grupo primeiro', 'error');
                return;
            }
            
            window.open(whatsappConfig.groupLink, '_blank');
        }

        // Agendar verifica√ß√£o de anivers√°rios
        function scheduleBirthdayCheck() {
            if (!whatsappConfig.autoBirthdayNotifications) return;
            
            // Verificar uma vez por dia √†s 9h
            const now = new Date();
            const nextCheck = new Date();
            nextCheck.setHours(9, 0, 0, 0);
            
            if (now > nextCheck) {
                nextCheck.setDate(nextCheck.getDate() + 1);
            }
            
            const timeUntilNextCheck = nextCheck.getTime() - now.getTime();
            
            setTimeout(() => {
                checkAndNotifyBirthdays();
                // Agendar pr√≥xima verifica√ß√£o
                scheduleBirthdayCheck();
            }, timeUntilNextCheck);
            
            console.log('Pr√≥xima verifica√ß√£o de anivers√°rios agendada para:', nextCheck);
        }

        // Verificar e notificar anivers√°rios
        function checkAndNotifyBirthdays() {
            const todaysBirthdays = getTodaysBirthdays();
            
            if (todaysBirthdays.length > 0) {
                // Em um sistema real, aqui voc√™ poderia:
                // 1. Enviar notifica√ß√£o push
                // 2. Enviar email
                // 3. Registrar no console para administradores
                
                console.log(`üéâ Hoje temos ${todaysBirthdays.length} aniversariante(s)!`);
                todaysBirthdays.forEach(member => {
                    console.log(`- ${member.name} (${member.role})`);
                });
                
                // Mostrar notifica√ß√£o para o usu√°rio
                if (Notification.permission === 'granted') {
                    new Notification('Network In Foco - Aniversariantes', {
                        body: `Hoje temos ${todaysBirthdays.length} aniversariante(s)!`,
                        icon: 'https://jywmvnxurbtziixntuuq.supabase.co/storage/v1/object/public/Imagens/LogotipoS.jpeg'
                    });
                }
            }
        }

        // Testar integra√ß√£o
        function testIntegration() {
            // Verificar se h√° aniversariantes
            const todaysBirthdays = getTodaysBirthdays();
            
            // Verificar configura√ß√µes
            const configStatus = whatsappConfig.groupLink ? 'Configurado' : 'N√£o configurado';
            
            // Mostrar relat√≥rio
            const report = `
Relat√≥rio de Integra√ß√£o WhatsApp:

- Aniversariantes hoje: ${todaysBirthdays.length}
- Link do grupo: ${configStatus}
- Notifica√ß√µes autom√°ticas: ${whatsappConfig.autoBirthdayNotifications ? 'Ativadas' : 'Desativadas'}
- Total de membros: ${members.length}
            `;
            
            alert(report);
            console.log('Teste de integra√ß√£o:', report);
        }

        // Solicitar permiss√£o para notifica√ß√µes
        function requestNotificationPermission() {
            if ('Notification' in window && Notification.permission === 'default') {
                Notification.requestPermission();
            }
        }

        // Integra√ß√£o com o sistema existente
        function integrateWithExistingSystem() {
            // Esta fun√ß√£o deve ser chamada quando o sistema principal estiver carregado
            // para substituir os dados de exemplo pelos dados reais
            
            console.log('Integrando com sistema NETWORK IN FOCO...');
            
            // Exemplo de como integrar:
            // 1. Substituir o array "members" pelos membros reais
            // 2. Chamar renderBirthdays() quando os dados forem carregados
            // 3. Configurar listeners para atualiza√ß√µes
        }

        // Inicializa√ß√£o
        document.addEventListener('DOMContentLoaded', function() {
            loadWhatsAppConfig();
            renderBirthdays();
            requestNotificationPermission();
            
            // Se as notifica√ß√µes autom√°ticas est√£o ativadas, agendar verifica√ß√£o
            if (whatsappConfig.autoBirthdayNotifications) {
                scheduleBirthdayCheck();
            }
            
            // Configurar auto-save das configura√ß√µes
            document.getElementById('autoBirthdayNotifications').addEventListener('change', saveWhatsAppConfig);
            
            console.log('Sistema de integra√ß√£o WhatsApp carregado!');
        });

